                                <option selected>Nhấp để mở lựa chọn</option>
                                <% }else{ %>
                                    
                                <% } %>

                                <% if(data_lotChuot[0].do_day == '2mm' ){ %>
                                <option value="2mm" selected> Dày 2MM </option>
                                <% }else{ %>
                                    <option value="2mm" > Dày 2MM </option>
                                <% } %> 

                                <% if(data_lotChuot[0].do_day == '3mm' ){ %>
                                    <option value="3mm" selected> Dày 3MM </option>
                                <% }else{ %>
                                     <option value="3mm" > Dày 3MM </option>
                                <% } %>     
                                
                                <% if(data_lotChuot[0].do_day == '4mm' ){ %>
                                    <option value="4mm" selected> Dày 4MM </option>
                                <% }else{ %>
                                    <option value="4mm" > Dày 4MM </option>
                                <% } %>

                                <% if(data_lotChuot[0].do_day == '5mm' ){ %>
                                    <option value="5mm" selected> Dày 5MM </option>
                                <% }else{ %>
                                    <option value="5mm" > Dày 5MM </option>
                                <% } %> 


                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="chu_de_key" class="form-label">Chủ đề: </label>
                            <select class="form-select" aria-label="Default select example" id="chu_de_key" name="chu_de_key">
                                <!-- <option selected>Nhấp để mở lựa chọn</option>
                                <option value="dragon_ball" > DRAGON BALL </option>                        
                                <option value="de_thuong"> DỄ THƯƠNG </option>
                                <option value="pokemon"> POKEMON </option> -->

                                <% if(data_lotChuot[0].chu_de_key == "" ){ %>
                                    <option selected>Nhấp để mở lựa chọn</option>
                                    <% }else{ %>
                                        
                                    <% } %>
    
                                    <% if(data_lotChuot[0].chu_de_key == 'dragon_ball' ){ %>
                                        <option value="dragon_ball" selected> DRAGON BALL </option> 
                                    <% }else{ %>
                                        <option value="dragon_ball" > DRAGON BALL </option> 
                                    <% } %>

                                    <% if(data_lotChuot[0].chu_de_key == "de_thuong" ){ %>
                                        <option value="de_thuong" selected> DỄ THƯƠNG </option> 
                                    <% }else{ %>
                                        <option value="de_thuong" > DỄ THƯƠNG </option> 
                                    <% } %> 

                                    <% if(data_lotChuot[0].chu_de_key == 'pokemon' ){ %>
                                        <option value="pokemon" selected> POKEMON </option> 
                                    <% }else{ %>
                                        <option value="pokemon" > POKEMON </option> 
                                    <% } %> 
                            </select>
                        </div>
    
