                                <option value="45x40cm">45x40CM</option>
                                <option value="80x30cm">80x30CM</option>
                                <option value="90x35cm">90x35CM</option>
                                <option value="90x40cm">90x40CM</option>


                                    <% if(data_lotChuot[0].kich_thuoc == "" ){ %>
